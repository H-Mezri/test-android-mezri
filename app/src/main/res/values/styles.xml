<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/darkButtonColor</item>
        <item name="colorControlHighlight">@color/gray</item>
    </style>

    <style name="LightButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorSnackBar</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
